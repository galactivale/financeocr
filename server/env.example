# VaultCPA Server Environment Variables
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=production
PORT=3080
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://vaultcpa_user:vaultcpa_secure_password_2024@postgres:5432/vaultcpa
TEST_DATABASE_URL=postgresql://vaultcpa_user:vaultcpa_secure_password_2024@postgres:5432/vaultcpa_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production
JWT_REFRESH_EXPIRES_IN=7d

# Frontend Configuration
FRONTEND_URL=https://financeocr.com
NEXT_PUBLIC_APP_URL=https://financeocr.com

# CORS Configuration
CORS_ORIGIN=https://financeocr.com,http://financeocr.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@vaultcpa.com
FROM_NAME=VaultCPA

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting - Removed

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# External APIs
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret
AVALARA_ACCOUNT_ID=your_avalara_account_id
AVALARA_LICENSE_KEY=your_avalara_license_key
GEMINI_API_KEY=your_google_gemini_api_key_here

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_MFA=false
ENABLE_ANALYTICS=true
