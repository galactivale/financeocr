# VaultCPA Database Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
DATABASE_URL=postgresql://vaultcpa_user:vaultcpa_secure_password_2024@localhost:5432/vaultcpa
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=vaultcpa
DATABASE_USER=vaultcpa_user
DATABASE_PASSWORD=vaultcpa_secure_password_2024

# Test Database
TEST_DATABASE_URL=postgresql://vaultcpa_user:vaultcpa_secure_password_2024@localhost:5432/vaultcpa_test

# Read-only Database User (for reporting)
READONLY_DATABASE_URL=postgresql://vaultcpa_readonly:readonly_password_2024@localhost:5432/vaultcpa

# PgAdmin Configuration
PGADMIN_EMAIL=admin@vaultcpa.com
PGADMIN_PASSWORD=admin123

# Application Configuration
NODE_ENV=production
PORT=3000

# Frontend URLs (Next.js)
NEXT_PUBLIC_API_URL=https://financeocr.com
NEXT_PUBLIC_APP_URL=https://financeocr.com

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# CORS Configuration
CORS_ORIGIN=https://financeocr.com,http://financeocr.com
FRONTEND_URL=https://financeocr.com

# External Services
REDIS_URL=redis://localhost:6379
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

